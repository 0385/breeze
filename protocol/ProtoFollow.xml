<?xml version="1.0" encoding="UTF-8"?>

<ProtoTraits>
    <MinNo>1000</MinNo>
    <MaxNo>1100</MaxNo>
    <UseLog4z>1</UseLog4z>
</ProtoTraits>


<Proto>

    <enum type="ui8"  name="FOLLOW_STATUS"  desc="关系">
        <member name="FOLLOW_INVALID" value="0" desc=""/>
        <member name="FOLLOW_DELETED"  desc="路人"/>
        <member name="FOLLOW_HATE"  desc="黑"/>
        <member name="FOLLOW_FOLLOWING"   desc="粉"/>
    </enum>


    <struct name="FollowingInfo" store="true" desc="关注">
         <member name="following" type="ui64"    tag="key" desc=""/>
         <member name="follower" type="ui64"  tag="key" desc=""/>
         <member name="status" type="ui8"   desc="状态标志"/>
         <member name="makeTime"    type="ui32" desc="建立时间"/>
         <member name="lastChanged"    type="ui32" desc="最后更改时间"/>
    </struct>
    <array name="FollowingInfoArray" type="FollowingInfo" desc="" />


    <!-- 协议开始处 -->
     <proto name="GetFollowerReq" desc= "获取粉丝列表">
        <member name="uID" type="ui64"     desc=""/>
        <member name="status" type="ui8"     desc="所有/路人/黑/粉"/>
    </proto>
    <proto name="GetFollowerAck" desc= "获取粉丝列表">
        <member name="status" type="ui8"     desc="所有/路人/黑/粉"/>
        <member name="follower" type="FollowingInfoArray"     desc=""/>
    </proto>


     <proto name="GetFollowingReq" desc= "获取关注列表">
        <member name="uID" type="ui64"     desc=""/>
        <member name="status" type="ui8"     desc="所有/路人/黑/粉"/>
    </proto>
    <proto name="GetFollowingAck" desc= "获取关注列表">
        <member name="status" type="ui8"     desc="所有/路人/黑/粉"/>
        <member name="following" type="FollowingInfoArray"     desc=""/>
    </proto>


    <proto name="PokeReq" desc= "操作">
        <member name="dstStatus" type="ui8"     desc="路人/黑/粉"/>
        <member name="following" type="ui64"     desc="关注目标ID"/>
    </proto>
    <proto name="PokeAck" desc= "操作">
        <member name="follow" type="FollowingInfo"     desc=""/>
    </proto>


</Proto>

