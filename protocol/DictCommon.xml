<?xml version="1.0" encoding="UTF-8"?>

<ProtoTraits>
  <MinNo>10000</MinNo>
  <MaxNo>11000</MaxNo>
  <UseLog4z>1</UseLog4z>
</ProtoTraits>


<Proto>

  
    <!------------- 全局配置 ---------------------->
    <packet name="DictGlobal" store="MyISAM" desc= "全局配置">
        <member name="id" type="ui64" tag="key"   desc=""/>
        <member name="val" type="ui64"   desc="整数"/>
        <member name="valFloat" type="double"   desc="浮点数"/>
        <member name="combo" type="string"   desc="字符串"/>
        <member name="desc" type="string"   desc=""/>
    </packet>



    <!------------- 抽奖 ---------------------->
    <packet name="DictReward" desc= "奖品">
        <member name="id" type="ui64"  desc="奖品ID"/>
        <member name="count" type="ui64"   desc="数量"/>
        <member name="probability" type="double"   desc="概率[0~1], 0为永远无法随机到 1是100%随机到"/>
    </packet>
    <array name="DictRewardArray" type="DictReward" desc="" />

    <packet name="DictDrop" store="MyISAM"  desc= "道具抽奖,道具掉落">
        <member name="id" type="ui64" tag="key"  desc=""/>
        <member name="dropType" type="ui64"   desc="0 独立随机, 所有奖品根据自身概率随机,  1 从奖池中抽取一个奖品, 如果所有奖品概率总和小于1则可能什么都抽取不到"/>
        <member name="rewards" type="DictRewardArray" tag="ignore"  desc="奖池"/>
        <member name="rewardsString" type="string"   desc="奖池,为填写方便,暂时用id|weight|prob, 格式的字符串填写, 服务器load后手动解析成RaffleAwardArray格式"/>
    </packet>





    <!------------- 道具 ---------------------->

    <packet name="DictItem" store="MyISAM"  desc= "道具字典">
        <member name="id" type="ui64" tag="key"  desc=""/>
        <member name="visible" type="ui16"   desc="是否可见"/>
        <member name="icon" type="ui16"   desc=""/>
        <member name="stacks" type="ui16"   desc="可堆叠个数,0和1都是1次"/>
        <member name="autoUse" type="ui16"   desc="0 不可使用, 1 可使用, 2 获得后自动使用"/>
        <member name="dropID" type="ui64"   desc=""/>
        <member name="propID" type="ui64"   desc=""/>


        <member name="vocationLimit" type="ui16"   desc="限制职业类型, 装备类型"/>
        <member name="levelLimit" type="double"   desc="限制职业最小等级, 装备类型"/>


        <member name="desc" type="string"   desc=""/>
    </packet>




    <struct name="DictProp" store="MyISAM" desc="">
        <member name="id" type="ui64" tag="key"  desc=""/>
        <member name="hp" type="double"   desc="血量值"/>
        <member name="hpRegen" type="double"   desc="每秒血量值恢复"/>
        <member name="attack" type="double"   desc="伤害"/>
        <member name="defense" type="double"   desc="防御"/>
        <member name="crit" type="double"   desc="暴击"/>
        <member name="toughness" type="double"   desc="韧性"/>
        <member name="moveSpeed" type="double"   desc="移动速度"/>
        <member name="attackSpeed" type="double"   desc="攻击速度"/>
        <member name="vampirk " type="double"   desc="吸血"/> 
    </struct>
    <array name="DictPropArray" type="DictProp" desc="" />
    <map name="DictPropMap" key="ui64" value="DictProp" desc="" />

    <struct name="DictSceneUpLevel" store="MyISAM" desc="">
        <member name="id" type="ui64" tag="key"  desc=""/>
        <member name="nextID" type="ui64"   desc="下一等级的ID"/>
        <member name="propID" type="ui64"   desc="对应的prop数值"/>
        <member name="upExp" type="double"   desc="升级所需经验"/>
    </struct>
    <array name="DictSceneUpLevelArray" type="DictSceneUpLevel" desc="" />
    <map name="DictSceneUpLevelMap" key="ui64" value="DictSceneUpLevel" desc="" />


    <struct name="DictModel" store="MyISAM" desc="">
        <member name="eid" type="ui64"   desc=""/>
        <member name="modelID" type="ui64" tag="key"   desc=""/>
        <member name="modelName" type="string"   desc=""/>
        <member name="avatarID" type="ui64"   desc=""/>
        <member name="avatarName" type="string"   desc=""/>
        <member name="iconID"  type="ui64" desc="头像"/>
        <member name="level"  type="double" desc="等级"/>
        <member name="exp"  type="double" desc="经验"/>
        <member name="gold"  type="double" desc="金币"/>
        <member name="camp"  type="ui16" desc=""/>
        <member name="etype"  type="ui16" desc=""/>
        <member name="state"  type="ui16" desc=""/>
    </struct>
    <array name="DictModelArray" type="DictModel" desc="" />
    <map name="DictModelMap" key="ui64" value="DictModel" desc="" />


</Proto>

